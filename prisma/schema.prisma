// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String      @id @default(uuid())
  email           String      @unique
  name            String
  username        String      @unique
  password        String
  avatar          String      @default("")
  phone_number    String
  recommendations Int         @default(0)
  UserToken       UserToken[]
  Items           Item[]
  created_at      DateTime @default(now())
}

model Event {
  id      String   @id @default(uuid())
  name    String
  type    String
  date    DateTime
  payload Json
}

model UserToken {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  token      String   @unique @default(uuid())
  expires    DateTime
  created_at DateTime
}

model Item {
  id          String        @id @default(uuid())
  title       String
  description String
  thumbnail   String
  purpose     String
  owner_id    String
  user        User          @relation(fields: [owner_id], references: [id])
  created_at  DateTime
  updated_at  DateTime
}