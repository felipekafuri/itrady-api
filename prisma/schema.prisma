// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String      @id @default(uuid())
  email           String      @unique
  name            String
  username        String      @unique
  password        String
  avatar          String      @default("")
  phone_number    String
  recommendations Int         @default(0)
  UserToken       UserToken[]
}

model Event {
  id      String   @id @default(uuid())
  name    String
  type    String
  date    DateTime
  payload Json
}

model UserToken {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  token      String   @default(uuid()) @unique()
  expires    DateTime
  created_at DateTime
}
